{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vpnType": {
            "type": "string",
            "defaultValue": "RouteBased",
            "allowedValues": [
                "RouteBased",
                "PolicyBased"
            ],
            "metadata": {
                "description": "Route based (Dynamic Gateway) or Policy based (Static Gateway)"
            }
        },
        "localGatewayName": {
            "type": "string",
            "defaultValue": "localgateway",
            "metadata": {
                "description": "Arbitrary name for gateway resource representing your local/on-premise gateway"
            }
        },
        "localGatewayIpAddress": {
            "type": "string",
            "metadata": {
                "description": "Public IP of your local/on-premise gateway"
            }
        },
        "localGatewayAddressPrefix": {
            "type": "array",
            "metadata": {
                "description": "CIDR block representing the address space of your local/on-premise network's Subnet"
            }
        },
        "azureVnetName": {
            "type": "string",
            "defaultValue": "azvnet",
            "metadata": {
                "description": "Arbitrary name for the Azure Virtual Network"
            }
        },
        "azureVnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.5.0.0/16",
            "metadata": {
                "description": "CIDR block representing the address space of the Azure Vnet"
            }
        },
        "azureVnetSubnetName": {
            "type": "string",
            "defaultValue": "azvnetsubnet01",
            "metadata": {
                "description": "Arbitrary name for the Azure virtual network subnet"
            }
        },
        "azureVnetVmSubnetPrefix": {
            "type": "string",
            "defaultValue": "10.5.1.0/24",
            "metadata": {
                "description": "CIDR block for VM subnet, subset of the Azure Vnet Address Prefix address space"
            }
        },
        "azureVnetGatewayName": {
            "type": "string",
            "defaultValue": "azvnetgateway",
            "metadata": {
                "description": "Arbitrary name for the new Azure gateway"
            }
        },
        "azureVnetGatewayConnectionName": {
            "type": "string",
            "defaultValue": "azvnetgatewaylink",
            "metadata": {
                "description": "Arbitrary name for the connection between the Azure virtual network and the local/on-premise network"
            }
        },
        "azureVnetGatewaySubnetPrefix": {
            "type": "string",
            "defaultValue": "10.5.200.0/29",
            "metadata": {
                "description": "CIDR block for gateway subnet, subset of the Azure Vnet Address Prefix address space"
            }
        },
        "azureVnetGatewayPublicIpAllocationMethod": {
            "type": "string",
            "defaultValue": "Dynamic",
            "allowedValues": [
                "Dynamic",
                "Static"
            ],
            "metadata": {
                "description": "Allocation method for the Azure Vnet Gateway Public IP, it can be dynamic or static."
            }
        },
        "azureVnetGatewayPublicIpName": {
            "type": "string",
            "defaultValue": "azvnetgatewaypublicip",
            "metadata": {
                "description": "Arbitrary name for public IP used for the Azure gateway"
            }
        },
        "gatewaySku": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "Standard",
                "HighPerformance"
            ],
            "metadata": {
                "description": "The Sku of the Gateway. This must be one of Basic, Standard or HighPerformance."
            }
        },
        "sharedKey": {
            "type": "securestring",
            "metadata": {
                "description": "Shared key (PSK) for IPSec tunnel"
            }
        }
    },
    "variables": {
        "gatewaySubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets/', parameters('azureVnetName'),'GatewaySubnet')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/localNetworkGateways",
            "apiVersion": "2015-06-15",
            "name": "[parameters('localGatewayName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "localNetworkAddressSpace": {
                    "addressPrefixes": "[parameters('localGatewayAddressPrefix')]"
                },
                "gatewayIpAddress": "[parameters('localGatewayIpAddress')]"
            }
        },
        {
            "apiVersion": "2015-06-15",
            "name": "[parameters('azureVnetGatewayConnectionName')]",
            "type": "Microsoft.Network/connections",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworkGateways/', parameters('azureVnetGatewayName'))]",
                "[concat('Microsoft.Network/localNetworkGateways/', parameters('localGatewayName'))]"
            ],
            "properties": {
                "virtualNetworkGateway1": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('azureVnetGatewayName'))]"
                },
                "localNetworkGateway2": {
                    "id": "[resourceId('Microsoft.Network/localNetworkGateways', parameters('localGatewayName'))]"
                },
                "connectionType": "IPsec",
                "routingWeight": 10,
                "sharedKey": "[parameters('sharedKey')]"
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('azureVnetName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('azureVNetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('azurevNetSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('azureVnetVmSubnetPrefix')]"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "[parameters('azureVnetGatewaySubnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('azureVnetGatewayPublicIpName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "[parameters('azureVnetGatewayPublicIpAllocationMethod')]"
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[parameters('azureVnetGatewayName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', parameters('azureVnetGatewayPublicIpName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('azureVnetName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('gatewaySubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('azureVnetGatewayPublicIpName'))]"
                            }
                        },
                        "name": "vnetGatewayConfig"
                    }
                ],
                "sku": {
                    "name": "[parameters('gatewaySku')]",
                    "tier": "[parameters('gatewaySku')]"
                },
                "gatewayType": "Vpn",
                "vpnType": "[parameters('vpnType')]",
                "enableBgp": "false"
            }
        }
    ]
}